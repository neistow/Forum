@using Forum.Core.Helpers
@model IEnumerable<Forum.Core.Domain.Post>

@{
    ViewBag.Title = "Posts";
}
<h1>Posts</h1>

<table class="table table-borderless table-hover">
    @foreach (var post in Model)
    {
        <tr class="col-lg-8">
            <td>
                <h2>@post.Title</h2>
                <p>@StringUtility.SummarizeText(post.Text)</p>

                <div style="display: flex;justify-content: space-between;align-items: center">
                    @post.DateCreated.ToString("f")
                    <a href="#" class="btn btn-success">Continue Reading</a>
                </div>
            </td>
        </tr>
    }
</table>